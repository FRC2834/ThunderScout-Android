<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/teleop_scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
    tools:context=".match.ScoutingFlowActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true"
        android:orientation="vertical"
        android:padding="20dp"
        android:scrollbars="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:text="Defenses"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Low Bar" />

            <ImageButton
                android:id="@+id/teleop_previewLowBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="showImagePreview"
                android:src="@drawable/ic_info_white_24dp" />

            <com.team980.thunderscout.util.CounterCompoundView
                android:id="@+id/teleop_counterLowBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:columnCount="2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Portcullis" />

                <ImageButton
                    android:id="@+id/teleop_previewPortcullis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="showImagePreview"
                    android:src="@drawable/ic_info_white_24dp" />

                <com.team980.thunderscout.util.CounterCompoundView
                    android:id="@+id/teleop_counterPortcullis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Chival de Frise" />

                <ImageButton
                    android:id="@+id/teleop_previewChivalDeFrise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="showImagePreview"
                    android:src="@drawable/ic_info_white_24dp" />

                <com.team980.thunderscout.util.CounterCompoundView
                    android:id="@+id/teleop_counterChivalDeFrise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Moat" />

                <ImageButton
                    android:id="@+id/teleop_previewMoat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="showImagePreview"
                    android:src="@drawable/ic_info_white_24dp" />

                <com.team980.thunderscout.util.CounterCompoundView
                    android:id="@+id/teleop_counterMoat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Ramparts" />

                <ImageButton
                    android:id="@+id/teleop_previewRamparts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="showImagePreview"
                    android:src="@drawable/ic_info_white_24dp" />

                <com.team980.thunderscout.util.CounterCompoundView
                    android:id="@+id/teleop_counterRamparts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Drawbridge" />

                <ImageButton
                    android:id="@+id/teleop_previewDrawbridge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="showImagePreview"
                    android:src="@drawable/ic_info_white_24dp" />

                <com.team980.thunderscout.util.CounterCompoundView
                    android:id="@+id/teleop_counterDrawbridge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Sallyport" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_info_white_24dp"
                    android:onClick="showImagePreview"
                    android:id="@+id/teleop_previewSallyport"/>

                <com.team980.thunderscout.util.CounterCompoundView
                    android:id="@+id/teleop_counterSallyport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Rock Wall" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_info_white_24dp"
                    android:onClick="showImagePreview"
                    android:id="@+id/teleop_previewRockWall"/>

                <com.team980.thunderscout.util.CounterCompoundView
                    android:id="@+id/teleop_counterRockWall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Rough Terrain" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_info_white_24dp"
                    android:onClick="showImagePreview"
                    android:id="@+id/teleop_previewRoughTerrain"/>

                <com.team980.thunderscout.util.CounterCompoundView
                    android:id="@+id/teleop_counterRoughTerrain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="Scoring"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Low Goals" />

            <com.team980.thunderscout.util.CounterCompoundView
                android:id="@+id/teleop_counterLowGoals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="High Goals" />

            <com.team980.thunderscout.util.CounterCompoundView
                android:id="@+id/teleop_counterHighGoals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Missed Goals" />

            <com.team980.thunderscout.util.CounterCompoundView
                android:id="@+id/teleop_counterMissedGoals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>