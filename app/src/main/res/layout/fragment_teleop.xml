<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/teleop_scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true"
        android:orientation="vertical"
        android:padding="20dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/teleop_tilTeamNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Team Number">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/teleop_editTextTeamNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="6"
                    android:inputType="number" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:orientation="horizontal"
            android:rowCount="5">

            <com.team980.thunderscout.util.CounterCompoundView
                android:id="@+id/teleop_counterLowBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.team980.thunderscout.util.CounterCompoundView
                android:id="@+id/teleop_counterPortcullis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.team980.thunderscout.util.CounterCompoundView
                android:id="@+id/teleop_counterChivalDeFrise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.team980.thunderscout.util.CounterCompoundView
                android:id="@+id/teleop_counterMoat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.team980.thunderscout.util.CounterCompoundView
                android:id="@+id/teleop_counterRamparts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.team980.thunderscout.util.CounterCompoundView
                android:id="@+id/teleop_counterDrawbridge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.team980.thunderscout.util.CounterCompoundView
                android:id="@+id/teleop_counterSallyport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.team980.thunderscout.util.CounterCompoundView
                android:id="@+id/teleop_counterRockWall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.team980.thunderscout.util.CounterCompoundView
                android:id="@+id/teleop_counterRoughTerrain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </GridLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.team980.thunderscout.util.CounterCompoundView
                android:id="@+id/teleop_counterLowGoals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.team980.thunderscout.util.CounterCompoundView
                android:id="@+id/teleop_counterHighGoals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.team980.thunderscout.util.CounterCompoundView
                android:id="@+id/teleop_counterMissedGoals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>