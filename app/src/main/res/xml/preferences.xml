<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="pref_isServer"
        android:summary="Run the app in Bluetooth server mode"
        android:title="ThunderScout Server" />
    <ListPreference
        android:defaultValue="saveLocally"
        android:dependency="pref_isServer"
        android:key="pref_serverStorageTask"
        android:entries="@array/server_storage_task"
        android:entryValues="@array/server_storage_task_values"
        android:summary="Method of storage for data received via bluetooth server"
        android:title="Server Storage Task" />
    <com.team980.thunderscout.util.BluetoothDevicePreference
        android:defaultValue="Master Scout"
        android:dialogTitle="Select your server device"
        android:key="pref_serverDevice"
        android:summary="Server device (must be paired first!)"
        android:title="Server Device" />
</PreferenceScreen>