<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ThunderScout.BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:navigationBarColor">?android:attr/colorPrimaryDark</item>
    </style>

    <style name="ThunderScout.BaseTheme.WithActionBar" parent="Theme.AppCompat.Light">
        <item name="android:windowContentTransitions" tools:targetApi="21">true</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:navigationBarColor">?android:attr/colorPrimaryDark</item>
    </style>

</resources>